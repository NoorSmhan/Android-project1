<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Image of the advertisement -->
    <ImageView
        android:id="@+id/adImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/default_ad_image"
        android:contentDescription="Advertisement Image"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop" />

    <!-- Vertical layout for title and description -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Title of the advertisement -->
        <TextView
            android:id="@+id/adTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advertisement Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Description of the advertisement -->
        <TextView
            android:id="@+id/adDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short description of the advertisement."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>
